<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBarStyle</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="AppTheme.MyActionBarStyle.TitleTextStyle">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
